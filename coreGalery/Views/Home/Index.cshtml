@model IQueryable<PaintingModel>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="mainPage.css" />


    <title></title>
</head>

<body>

    <div class="top">
        <div class="top-text">
            <h1>Картинна галерея</h1>
            <p>Картини великих художників, живопис майстрів минулого та сучасності з кращих музеїв світу.</p>
        </div>
    </div>

    <div id="maindiv">
        <div class="container">
            @foreach (PaintingModel painting in Model)
            {
                <div class="card">
                    <div class="face face1">
                        <div class="content">
                            <img id="img" src="~/Paintings/@painting.FileName"/>
                        </div>
                    </div>
                    <div class="face face2">
                        <div class="content">
                            <p>@painting.PictureName</p>
                            <a asp-controller="Galery" asp-action="Picture" asp-route-id="@painting.Id">Дізнатись більше</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

   @await Html.PartialAsync("BottomPartial", new Dictionary<string, (string cont, string act)>
{
    { "Головна сторінка", (cont:"Home", act:"Index") }
})

</body>

</html>
